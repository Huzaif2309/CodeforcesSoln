const ll INF = 1e9 + 5;
using namespace std;
 
 
void ihatecp() {
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
}
 
 
void solve() {
    int n;
    cin>>n;
    vector<int>a(n);
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    int q=0,maxi=0,ans=0;
    for(int i=0;i<n;i++){
        maxi=max(maxi,a[i]);
        int diff=maxi-a[i];
        ans+=diff;
        q=max(q,diff);
    }
    cout<<ans+q<<'\n';
}
 
signed main() {
    fast_io();
    //ihatecp();
    int t;
    cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}
